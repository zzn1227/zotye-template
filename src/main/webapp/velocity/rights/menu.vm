<!DOCTYPE html>
<html>

	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<title>菜单管理</title>
		#include("/commons/meta.html")
		<link href="/css/style.css" rel="stylesheet">
		<script type="text/javascript" src="/js/tools/help.js"></script>
		<script type="text/javascript" src="/js/rights/menu.js"></script>
	</head>

	<body>
		<table width="950" border="0" cellspacing="0" cellpadding="0" align="center">
			<tr>
				<td valign="top" bgcolor="#FFFFFF">
					<table width="99%" height="510" border="0" align="center" cellpadding="0" cellspacing="0" bgcolor="#FFFFFF" class="tableBorder_gray">
						<tr>
							<td height="510" valign="top" style="padding: 5px;">
								<table width="98%" height="487" border="0" cellpadding="0" cellspacing="0">
									<tr>
										<td>
											<div id="menu"></div>
											<script type="text/javascript">
												Ext.onReady(function() {
													var chooser = new MenuChooser({
                                                    	treeurl: Ext.getDom("root").value + MenuURL.treeUrl,
                                                    	formUrl: Ext.getDom('root').value + MenuURL.formUrl
                                                    });
                                                    chooser.showPanel();
												});
											</script>
											<input type="hidden" name="root" id="root" value="${rc.contextPath}" />
										</td>
									</tr>
								</table>
							</td>
						</tr>
					</table>
				</td>
			</tr>
		</table>
	</body>

</html>